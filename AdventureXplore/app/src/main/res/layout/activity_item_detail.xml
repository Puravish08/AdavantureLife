<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/fullcard"
        android:layout_width="@dimen/_320sdp"
        android:layout_height="@dimen/_242sdp"
        app:cardBackgroundColor="@color/dark"
        app:cardCornerRadius="@dimen/_14sdp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/viewpager_img3" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/palce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_19sdp"
        android:fontFamily="@font/changa_one"
        android:text="National Museum"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_3sdp">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/txtmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:text="Singapore"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:text="Traveling for fun is an exhilarating and enriching experience that allows you to escape the routine of daily life and explore new horizons. Whether you're jetting off to a far-flung destination, embarking on a road trip, or simply taking a weekend getaway, the thrill of discovery and adventure awaits. Here's a description of the essence of fun travel"
        android:layout_marginTop="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp" />

</LinearLayout>